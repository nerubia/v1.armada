{
  "name": "armada",
  "version": "2.0.1",
  "description": "Serverless microservices",
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "l": "eslint 'src/**/*.ts' --fix --quiet",
    "s:0": "rimraf ./src/services/$NAME",
    "s:1": "serverless create --template-path template --path ./src/services/$NAME/. --name $NAME",
    "s:2": "cd ./src/services/$NAME && npm i",
    "create": "npm run s:0 && npm run s:1 && npm run s:2",
    "create-user": "env $(cat .env) ts-node ./src/scripts/users/create.ts",
    "deploy": "cd ./src/services/$NAME && npm i && serverless deploy --stage $STAGE",
    "deploy:setup": "npm run deploy:1 && npm run deploy:2 && npm run deploy:3",
    "deploy:1": "cd ./src/services/$NAME && npm i",
    "deploy:2": "cd ./src/services/$NAME && npm run config",
    "deploy:3": "cd ./src/services/$NAME && npm run deploy",
    "invoke": "serverless invoke",
    "logs": "serverless logs",
    "remove": "cd ./src/services/$NAME && serverless remove --stage $STAGE && rimraf ./src/services/$NAME/node_modules",
    "start": "NODE_PORT=8888 ./node_modules/.bin/nodemon --resolveJsonModule",
    "test": "rimraf coverage/* && jest --detectOpenHandles --maxWorkers=1",
    "coverage": "rimraf coverage/* && jest --coverage --config jest-coverage.config.js",
    "seed:categories": "env $(cat .env) ts-node ./src/scripts/categories/index.ts",
    "seed:subcategories": "env $(cat .env) ts-node ./src/scripts/subcategories/index.ts",
    "seed:all": "npm run seed:categories && npm run seed:subcategories"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/g-six/armada.git"
  },
  "author": "g-six",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/g-six/armada/issues"
  },
  "homepage": "https://github.com/g-six/armada#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@types/aws-lambda": "^8.10.46",
    "@types/hapi__joi": "^16.0.12",
    "@types/jest": "^25.1.4",
    "@types/js-yaml": "^3.12.2",
    "@types/koa": "^2.11.2",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.0",
    "@types/koa__cors": "^3.0.1",
    "@types/lodash": "^4.14.149",
    "@types/mandrill-api": "^1.0.30",
    "@types/massive": "^5.4.3",
    "@types/moment": "^2.13.0",
    "@types/moment-timezone": "^0.5.12",
    "@types/node": "^13.9.3",
    "@types/redis": "^2.8.16",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "aws-sdk-mock": "^5.1.0",
    "commitlint": "^8.3.5",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "git-cz": "^4.3.1",
    "git-list-updated": "^1.2.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "massive": "^6.2.0",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.1",
    "pretty-quick": "^2.0.1",
    "serverless": "^1.67.0",
    "serverless-domain-manager": "^3.3.1",
    "serverless-offline": "^6.0.0",
    "serverless-plugin-typescript": "^1.1.9",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.8.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3"
  },
  "lint-staged": {
    "*.(j|t)s": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@g-six/kastle-router": "^0.1.6",
    "@g-six/swiss-knife": "^0.1.10",
    "@hapi/joi": "^17.1.1",
    "@koa/cors": "^3.0.0",
    "@types/mime-types": "^2.1.0",
    "@types/uuid": "^7.0.2",
    "aws-sdk": "^2.643.0",
    "axios": "^0.19.2",
    "js-yaml": "^3.13.1",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^8.0.8",
    "lodash": "^4.17.15",
    "mandrill-api": "^1.0.45",
    "mime-types": "^2.1.26",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.28",
    "npm-check-updates": "^4.0.4"
  }
}
