{
  "name": "armada",
  "version": "2.0.5",
  "description": "Serverless microservices",
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "l": "eslint 'src/**/*.ts' --fix --quiet",
    "s:0": "rimraf ./src/services/$NAME",
    "s:1": "serverless create --template-path template --path ./src/services/$NAME/. --name $NAME",
    "s:2": "cd ./src/services/$NAME && npm i",
    "create": "npm run s:0 && npm run s:1 && npm run s:2",
    "create-token": "ts-node ./src/scripts/tokens/create.ts",
    "create-user": "env $(cat .env) ts-node ./src/scripts/users/create.ts",
    "deploy": "cd ./src/services/$NAME && npm i && serverless deploy --stage $STAGE",
    "deploy:setup": "npm run deploy:1 && npm run deploy:2 && npm run deploy:3",
    "deploy:1": "cd ./src/services/$NAME && npm i",
    "deploy:2": "cd ./src/services/$NAME && npm run config",
    "deploy:3": "cd ./src/services/$NAME && npm run deploy",
    "invoke": "serverless invoke",
    "logs": "serverless logs",
    "remove": "cd ./src/services/$NAME && serverless remove --stage $STAGE && rimraf ./src/services/$NAME/node_modules",
    "start": "NODE_PORT=8888 ./node_modules/.bin/nodemon --resolveJsonModule",
    "test": "rimraf coverage/* && jest --detectOpenHandles --maxWorkers=1",
    "coverage": "rimraf coverage/* && jest --coverage --config jest-coverage.config.js",
    "seed:categories": "env $(cat .env) ts-node ./src/scripts/categories/index.ts",
    "seed:subcategories": "env $(cat .env) ts-node ./src/scripts/subcategories/index.ts",
    "seed:all": "npm run seed:categories && npm run seed:subcategories"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/g-six/armada.git"
  },
  "author": "g-six",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/g-six/armada/issues"
  },
  "homepage": "https://github.com/g-six/armada#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@types/aws-lambda": "^8.10.64",
    "@types/jest": "^26.0.16",
    "@types/js-yaml": "^3.12.5",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/koa": "^2.11.6",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.1",
    "@types/koa__cors": "^3.0.2",
    "@types/lodash": "^4.14.165",
    "@types/mandrill-api": "^1.0.30",
    "@types/massive": "^5.4.3",
    "@types/moment": "^2.13.0",
    "@types/moment-timezone": "^0.5.13",
    "@types/node": "^14.14.10",
    "@types/redis": "^2.8.28",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "aws-sdk-mock": "^5.1.0",
    "commitlint": "^11.0.0",
    "debug": "^4.3.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.2.0",
    "git-cz": "^4.7.5",
    "git-list-updated": "^1.2.1",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.2",
    "massive": "^6.6.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "serverless": "^2.14.0",
    "serverless-domain-manager": "^5.1.0",
    "serverless-offline": "^6.8.0",
    "serverless-plugin-typescript": "^1.1.9",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.2"
  },
  "lint-staged": {
    "*.(j|t)s": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@g-six/kastle-router": "^0.1.7",
    "@g-six/swiss-knife": "^0.1.15",
    "@g-six/swiss-knife-lite": "^1.0.4",
    "@koa/cors": "^3.1.0",
    "@types/mime-types": "^2.1.0",
    "@types/uuid": "^8.3.0",
    "aws-sdk": "^2.803.0",
    "axios": "^0.21.1",
    "joi": "^17.3.0",
    "js-yaml": "^3.14.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^10.0.0",
    "lodash": "^4.17.20",
    "mandrill-api": "^1.0.45",
    "mime-types": "^2.1.27",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.32",
    "node-fetch": "^2.6.7",
    "npm-check-updates": "^10.2.2",
    "yargs-parser": "^20.2.4"
  },
  "private": true,
  "workspaces": [
    "src/services/*"
  ]
}
